<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ShowActivity">
    <RelativeLayout
        android:id="@+id/titlelayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue"
        android:paddingStart="10dp"
        android:layout_gravity="top">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_alignEnd="@+id/language_btn"
            android:layout_height="match_parent"
            android:text="@string/app_name"
            android:fontFamily="@font/lobsterbold"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:gravity="start" />

        <Spinner
            android:id="@+id/language_btn"
            android:layout_alignParentEnd="true"
            android:layout_width="130dp"
            android:popupBackground="@color/blue"
            android:backgroundTint="@color/white"
            android:foregroundTint="@color/white"
            android:layout_centerVertical="true"
            android:layout_height="48dp" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titlelayout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/preview_IV"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/background"
                android:scaleType="fitCenter"
                android:src="@mipmap/book_logo"
                android:layout_marginBottom="0dp" />
            <TextView
                android:id="@+id/result_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textAlignment="viewStart"
                android:padding="10dp"
                android:layout_below="@+id/preview_IV"
                android:background="@drawable/bg_text"
                android:layout_margin="12dp"
                android:fontFamily="@font/playfair"
                android:textColor="@color/white"/>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
