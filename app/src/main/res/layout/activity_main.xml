<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/contentlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="300dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            app:lottie_rawRes="@raw/homelottie"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

        <Button
            android:id="@+id/know_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
           android:layout_margin="30dp"
            android:layout_gravity="center"
            android:text="Choose how to upload"
            android:padding="10dp"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:elevation="5dp"
            android:background="@drawable/knowmorebtn"
            android:textColor="@color/blue"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/contentlayout"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/gallery_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/custombutton"
            android:drawableRight="@drawable/drawable_gallery"
            android:elevation="8dp"
            android:fontFamily="sans-serif"
            android:padding="5dp"
            android:text="Gallery"
            android:paddingEnd="15dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <Button
            android:id="@+id/camera_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/custombutton"
            android:drawableRight="@drawable/drawable_camera"
            android:fontFamily="sans-serif"
            android:padding="5dp"
            android:text="Camera"
            android:paddingEnd="15dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </LinearLayout>


</RelativeLayout>